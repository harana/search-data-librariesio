<% navbar_selected = "border-emerald-500 text-emerald-600" %>
<% navbar_unselected = "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" %>

<!DOCTYPE html>
<html class="h-full bg-white" lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Harana Search</title>
  <link rel="stylesheet" href="/assets/highlightjs.css">
  <link rel="stylesheet" href="/assets/main.css">
  <link rel="stylesheet" href="/assets/readme.css">
  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
  <script>
      function switchTab(event, tabId) {
          event.preventDefault();

          document.querySelectorAll('.tab-content').forEach(content => content.classList.add('hidden'));
          document.getElementById(tabId).classList.remove('hidden');

          let selectedClass = '<%= navbar_selected %>'.split(' ');
          let unselectedClass = '<%= navbar_unselected %>'.split(' ');

          let tabLinks = document.getElementById('#header-nav').getElementsByTagName("a");
          for (let link of tabLinks) {
              link.classList.add(...unselectedClass);
              link.classList.remove(...selectedClass);
          }

          event.currentTarget.classList.add(...selectedClass);
          event.currentTarget.classList.remove(...unselectedClass);
      }
  </script>
</head>
<body class="h-full">
  <%= ERB.new(File.read('app/assets/harana/templates/_sidebar.html.erb'), eoutvar: '_sub01').result(binding) %>

  <div class="lg:pl-60">
    <main>
      <header class="relative isolate">
        <div class="absolute inset-0 -z-10 overflow-hidden" aria-hidden="true">
          <div class="absolute left-16 top-full -mt-16 transform-gpu opacity-50 blur-3xl xl:left-1/2 xl:-ml-80">
            <div class="aspect-[1154/678] w-[72.125rem] bg-gradient-to-br from-[<%= PackageManager::Base.find(package_manager).color %>] to-[#9089FC]" style="clip-path: polygon(100% 38.5%, 82.6% 100%, 60.2% 37.7%, 52.4% 32.1%, 47.5% 41.8%, 45.2% 65.6%, 27.5% 23.4%, 0.1% 35.3%, 17.9% 0%, 27.7% 23.4%, 76.2% 2.5%, 74.2% 56%, 100% 38.5%)"></div>
          </div>
          <div class="absolute inset-x-0 bottom-0 h-px bg-gray-900/5"></div>
        </div>

        <div class="mx-auto px-8 pt-10 pb-1 sm:px-6 lg:px-8">
          <div class="mx-auto flex max-w-2xl px-4 items-center justify-between gap-x-8 lg:mx-0 lg:max-w-none">
            <div class="flex items-center gap-x-6">
              <img src="/assets/images/<%= PackageManager::Base.find(package_manager).icon %>" width="50px"/>
              <h1>
                <div class="allow-select text-3xl font-bold tracking-tight text-gray-700 sm:text-3xl"><%= package_manager %></div>
              </h1>
            </div>
          </div>
        </div>
        <div class="lg:pl-12">
          <div class="sm:hidden">
            <label for="tabs" class="sr-only">Select a tab</label>
            <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
            <select id="tabs" name="tabs" class="block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-emerald-500 focus:outline-none focus:ring-emerald-500 sm:text-sm">
              <option>My Account</option>
              <option>Company</option>
              <option selected>Team Members</option>
              <option>Billing</option>
            </select>
          </div>
          <div class="hidden sm:block">
            <div class="border-b border-gray-200">
              <nav id="#header-nav" class="-mb-px flex space-x-8" aria-label="Tabs">
                <% navbar_default = "cursor-pointer whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium" %>
                <a data-tab="popular" onclick="switchTab(event, 'popular')" class="<%= navbar_selected %> <%= navbar_default %>" aria-current="page">Popular</a>
                <a data-tab="recently-updated" onclick="switchTab(event, 'recently-updated')" class="<%= navbar_unselected %> <%= navbar_default %>">Recently Updated</a>
                <a data-tab="recently-created" onclick="switchTab(event, 'recently-created')" class="<%= navbar_unselected %> <%= navbar_default %>">Recently Created</a>
              </nav>
            </div>
          </div>
        </div>
      </header>

      <div class="overflow-scroll mx-auto px-12 py-12" style="height: calc(100vh - 120px);">
        <div class="mx-auto grid max-w-2xl grid-cols-2 grid-rows-1 items-start gap-x-8 gap-y-8 lg:mx-0 lg:max-w-none lg:grid-cols-2">
          <!-- Start Popular -->
          <section id="popular" class="tab-content">
            <ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
              <% Project.platform(package_manager).popular.each do |project| %>
                <%= ERB.new(File.read('app/assets/harana/templates/_project_row.html.erb'), eoutvar: '_sub01').result(binding) %>
              <% end %>
            </ul>
          </section>
          <!-- End Popular -->
          <!-- Start Recently Updated -->
          <section id="recently-updated" class="tab-content hidden">
            <ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
              <% Project.platform(package_manager).recently_updated.each do |project| %>
                <%= ERB.new(File.read('app/assets/harana/templates/_project_row.html.erb'), eoutvar: '_sub01').result(binding) %>
              <% end %>
            </ul>
          </section>
          <!-- End Recently Updated -->
          <!-- Start Recently Created -->
          <section id="recently-created" class="tab-content hidden">
            <ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
              <% Project.platform(package_manager).recently_created.each do |project| %>
                <%= ERB.new(File.read('app/assets/harana/templates/_project_row.html.erb'), eoutvar: '_sub01').result(binding) %>
              <% end %>
            </ul>
          </section>
          <!-- End Recently Created -->
        </div>
      </div>
    </main>
  </div>
</body>
</html>